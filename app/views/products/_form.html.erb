<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nombre: " %>
    <%= form.text_field :name, id: :product_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :references, "Referencias: " %>
    <%= form.text_area :references, id: :product_references, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price, "Precio: " %>
    <%= form.text_field :price, id: :product_price, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :quantity, "Cantidad: " %>
    <%= form.number_field :quantity, id: :product_quantity, class: "form-control" %>
  </div>
  <br>
  <div class="field">
      <%= form.submit "Guardar", class: "btn btn-info" %>
  </div>
<% end %>
