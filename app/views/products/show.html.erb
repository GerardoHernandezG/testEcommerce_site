<div style="width: 70%; height: 100%; margin: 0 auto; padding-bottom:15px;">
	<div class="row">
		<p id="notice"><%= notice %></p>

		<p>
		  <strong>Nombre:</strong>
		  <%= @product.name %>
		</p>

		<p>		
			<%= image_tag @product.image.url, :style => "width: 60%" %>
		</p>

		<p>
		  <strong>Datos del producto:</strong>
		  <%= @product.references %>
		</p>

		<p>
		  <strong>Precio:</strong>
		  <%= @product.price %>
		</p>

		<p>
		  <strong>Cantidad:</strong>
		  <%= @product.quantity %>
		</p>

		<% if user_signed_in? && current_user.permission_level == 1 %>
			<%= link_to 'Editar', edit_product_path(@product) %> |
		<% end %>
		
		<%= link_to 'Regresar', products_path %>
	</div>
</div>
