<!-- header -->
	<div class="agileits_header">
		<div class="container">
			<div class="w3l_offers">
				<% if user_signed_in? %>
				  <% if current_user.permission_level == 1 %>
					<p><strong>Conectado: </strong><%= current_user.username %> - <span class="custom_link_white"><%= link_to "Administrar", admin_settings_path, class: 'custom_link_white', style: 'font-size: 1.1em;' %></span></p>
				  <% else %>
				  	<p>Conectado: <%= current_user.username %></p>
				  <% end %>
				<% else %>
					<p>Promociones!! <a href="products.html">Compra ahora</a></p>
				<% end %>			
			</div>
			<div class="agile-login">
				<ul>
					<% if user_signed_in? %>
		  				<li class="col-md col-xs col-sm">
		  					<%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete %>
		  				</li>
		  				<li class="col-md col-xs col-sm">
		  			<% else %>
		  					<%= link_to "Login", new_user_session_path %>
		  				</li>
		  				<li class="col-md col-xs col-sm">
		  					<%= link_to "Registrarse", new_user_registration_path %>
		  				</li>
		  			<% end %>
					<li><a href="contact.html">Ayuda</a></li>
					
				</ul>
			</div>
			<div class="product_list_header">  
					<form action="#" method="post" class="last"> 
						<input type="hidden" name="cmd" value="_cart">
						<input type="hidden" name="display" value="1">
						<button class="w3view-cart" type="submit" name="submit" value=""><i class="fa fa-cart-arrow-down" aria-hidden="true"></i></button>
					</form>  
			</div>
			<div class="clearfix"></div>
		</div>
	</div>

	<div class="logo_products">
		<div class="container">
		<div class="w3ls_logo_products_left1">
				<ul class="phone_email">
					<li><i class="fa fa-phone" aria-hidden="true"></i>Ordena en Línea o Llámanos</li>
					
				</ul>
			</div>
			<div class="w3ls_logo_products_left">
				<h2><a href="index.html">Ecommerce Test</a></h2>
			</div>
		<div class="w3l_search">
			<form action="#" method="post">
				<input type="search" name="Search" placeholder="Buscar productos..." required="">
				<button type="submit" class="btn btn-default search" aria-label="Left Align">
					<i class="fa fa-search" aria-hidden="true"> </i>
				</button>
				<div class="clearfix"></div>
			</form>
		</div>
			
			<div class="clearfix"> </div>
		</div>
	</div>
<!-- //header -->